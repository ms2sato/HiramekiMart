<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= @item.errors.count %> 個のエラーがあります</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= image_tag @item.image.thumb.url, width: '100' if @item.image? %><br>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :target_price %><br>
    <%= f.text_field :target_price, data: { autonumeric: { aSign: '¥ ', mDec: 0 } }%>
  </div>

  <div class="field">
    <%= f.label :limited_at %><br>
    <%= raw sprintf(
                  f.date_select(
                      :limited_at,
                      use_month_numbers: true,
                      date_separator:    '%s'),
                  '年 ', '月 ') + '日' %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Item.categories_i18n.invert, prompt: "選択してください"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
